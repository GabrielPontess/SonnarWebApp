        <div class="container text-center text-muted">
            <span><b>SONNAR</b> &copy; 2022, G5 Company. Todos os direitos reservados</span>
        </div>
    </footer>
    }

    @if(0 != 0)
    {
        <div class="row">
            <div class="sonnar-navbar-background col-2 p-0">
                <div class="sonnar-navbar flex-shrink-0 p-4 h-100 w-100">
                    <div class="d-flex gap-2 mb-3">
                        <div class="rounded-circle p-1" style="background-color:#8341C1"></div>
                        <div class="rounded-circle p-1" style="background-color:#BA68C8"></div>
